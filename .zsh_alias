# Global aliases
alias -g G="|grep -Ei"
alias -g CP="|pbcopy"
alias -g cover="~/CV/Cover\ Letters/"

# Shortcuts
alias e="nvim"
alias v="e"
alias vi="nvim"
alias vim="nvim"
alias f='nvim $(fzf)'
alias cfv="nvim ~/.config/nvim/lua/mine"
alias SS="sudo systemctl"
alias r="ranger"
alias ka="killall"
alias g="git"
alias gs="git status"
alias cp="rsync --archive --human-readable --progress --verbose --whole-file"
alias mkd="mkdir -pv"
alias cleartex="rm *.aux *.dvi *.log"
alias dotf="/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias virc="e $HOME/.config/nvim/init.vim"
alias fatvi="e -u $HOME/.config/fat-nvim/init.vim"
alias calc="python -i ~/.config/math_mode.py"
alias config="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"
alias lazyconf="lazygit --git-dir=$HOME/.cfg/ --work-tree=$HOME"
# alias t="tmux new-session -A -s main"
alias t="tmux attach || tmux new-session -A -s main"
alias t2="tmux new-session -A -s secondary"
alias dragon="dragon-drop"
alias ex="(dolphin .  & disown) > /dev/null 2>&1"
alias gd="git difftool"
alias workfox="firefox --no-remote -P work --class=secondclass"
alias md="frogmouth"

# Misc aliases and default flags behaviour
alias ref="source ~/.zshrc"
alias tb="nc termbin.com 9999 | tr -d '\\n' | xclip -selection clipboard"
alias cd..="cd .."
alias df="df -h"
alias exa="exa --long --header --git"
alias sudo='sudo '
alias cal='cal --monday'
alias ip='ip --color=always'
alias mv="mv -i"
alias grep="grep -E" # Who even knows normal grep

# Youtube
alias yt="yt-dlp --add-metadata -i" # Download video link
alias yta="yt -x -f bestaudio/best" # Download only audio

# Color
alias ls='ls -h --color=auto'
alias grep="grep --color=auto"
alias diff="diff --color=auto"

# System Maintainence
alias sdn="sudo shutdown now"

# GHC is dumb
alias ghc="ghc -dynamic"

alias defenestrate="rm -rf"
